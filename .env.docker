# ============================================================================
# DOCKER ENVIRONMENT CONFIGURATION
# ============================================================================
# Copy this file to .env and customize for your deployment
# Usage: docker-compose --env-file .env up -d
# ============================================================================

# ----------------------------------------------------------------------------
# Build Information
# ----------------------------------------------------------------------------
BUILD_DATE=2026-01-29
VERSION=1.0.0

# ----------------------------------------------------------------------------
# Service Ports
# ----------------------------------------------------------------------------
BACKEND_PORT=8000
FRONTEND_PORT=3000

# ----------------------------------------------------------------------------
# Logging
# ----------------------------------------------------------------------------
LOG_LEVEL=INFO

# ----------------------------------------------------------------------------
# PostgreSQL Configuration (if using postgres service)
# ----------------------------------------------------------------------------
# POSTGRES_DB=structural_repair
# POSTGRES_USER=repair_user
# POSTGRES_PASSWORD=change_this_secure_password
# POSTGRES_PORT=5432

# ----------------------------------------------------------------------------
# Analysis Configuration
# ----------------------------------------------------------------------------
DEFAULT_FS=1000
DEFAULT_MAX_MODES=5
DEFAULT_MIN_FREQ=1.0
DEFAULT_MAX_FREQ=450.0

# ----------------------------------------------------------------------------
# File Upload Configuration
# ----------------------------------------------------------------------------
MAX_FILE_SIZE=52428800  # 50 MB in bytes

# ----------------------------------------------------------------------------
# Cache Configuration
# ----------------------------------------------------------------------------
ENABLE_CACHE=true
CACHE_TTL=3600

# ----------------------------------------------------------------------------
# Analysis Timeout
# ----------------------------------------------------------------------------
ANALYSIS_TIMEOUT=300  # 5 minutes
